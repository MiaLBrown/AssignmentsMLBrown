import java.util.ArrayList;
import java.util.Scanner;

class Employee {
  public String fullName;
  public String jobTitle;
  public String employeeType;
  public int hoursWorkedPerWeek;
  public String ssn;
  public int annualSalary;
  public int hourlyWage;

  
  public int getHourlyWage(){
    return 22;
  }
  public String getFullName() {// get full name
    return fullName;
  }
  public String getJobTitle() {//get job title
    return jobTitle;
  }
  public String getEmployeeType(){//get employee type
    return employeeType;
  }
  public int getHoursWorkedPerWeek() {//get hours worked per week
    return hoursWorkedPerWeek;
  }
  public String getSsn() {//get ssn
    return ssn;
  }
  public int getAnnualSalary() {//get annual salary
    return annualSalary;
  }

  public void setFullName(String fullName) {//set full name
    this.fullName = fullName;
  }
  public void setJobTitle(String jobTitle){//set job title
    this.jobTitle = jobTitle;
  }
  public void setEmployeeType(String employeeType){// set employee type
    this.employeeType = employeeType;
  }
  public void setHoursWorkedPerWeek(int hoursWorkedPerWeek){
    this.hoursWorkedPerWeek = hoursWorkedPerWeek;
  }
  public void setSsn(String ssn){// set ssn
    this.ssn = ssn;
  }
  public void setAnnualSalary(int annualSalary){
    this.annualSalary = annualSalary;
  }
  public void setHourlyWage(int hourlyWage){
    this.hourlyWage = hourlyWage;
  }
  
  public void displayMenu(){
    System.out.println("                                    ");
    System.out.println("---  Welcome To The Human Resources Department ---");
    System.out.println("                                    ");
    System.out.println("1. Add an employee");
    System.out.println("2. View employee details");
    System.out.println("3. Delete employee");
    System.out.println("4. Exit");
    System.out.print("Enter your choice: ");
    
    
  }
}
  public class Main {
    static Scanner scanner = new Scanner(System.in);
    static ArrayList<Employee> employees = new ArrayList<Employee>();

    
    public static void main(String[] args) {
      int choice;
          do {
            Employee employee = new Employee(); // Create an instance of Employe
            employee.displayMenu(); // Call the displayMenu method
            choice = scanner.nextInt();
            scanner.nextLine();  // consume the newline character

            switch (choice) {
                case 1:
                    addEmployee();
                    break;
                case 2:
                    viewEmployee();
                    break;
                case 3:
                    deleteEmployee();
                    break;
                case 4:
                    System.out.println("Goodbye...");// quit the program
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }    while (choice != 4);
          
    }

  private static void addEmployee() {
      System.out.println("------------------------------------");
      System.out.println("                                    ");
      System.out.println("Enter Employee Type:");
      System.out.println("1. Salaried| Full-time");
      System.out.println("2. Salaried| Part-time");
      System.out.println("3. Hourly| Contractor");
      System.out.print("Enter your choice: ");
      int chooseEmployeeType = scanner.nextInt();
      scanner.nextLine();

      String employeeType = " ";
    
      System.out.println("------------------------------------");
      System.out.print("Enter Employee Full Name: ");// new employee full name
      String fullName = scanner.nextLine();
      System.out.print("Enter job title: ");// new employee job title
      String jobTitle = scanner.nextLine();
      if (chooseEmployeeType == 1){
        employeeType = "Salaried| Full-time";
      }
      else if (chooseEmployeeType == 2){
        employeeType = "Salaried| Part-time";
      }
      else if (chooseEmployeeType == 3){
        employeeType = "Hourly| Contractor";
        
      }
      
      System.out.print("Hours worked per week: ");// new employee HPW
      int hoursWorkedPerWeek = scanner.nextInt();
      scanner.nextLine();//to prevent skipping ssn input
      System.out.print("Enter Employee ssn: ");// new employee ssn
      String ssn = scanner.nextLine();
     
      System.out.println("                                    ");
      System.out.println("-------- New Employee Added --------");
      System.out.println("Full Name: " + fullName);//show new employee name
      System.out.println("Job title: " + jobTitle);//show new employee job title
      System.out.println("Employee Type: " + employeeType);//show new employee type
      System.out.println("SSN: " + ssn);//show new employee ssn
      System.out.println("------------------------------------");
      System.out.println("Hours per week: "+ hoursWorkedPerWeek);
      System.out.println("------------------------------------");
      
      
      
      
      Employee newemployee = new Employee();//adding the New employee to list
      newemployee.setFullName(fullName);
      newemployee.setJobTitle(jobTitle);
      newemployee.setEmployeeType(employeeType);
      newemployee.setHoursWorkedPerWeek(hoursWorkedPerWeek);
      newemployee.setSsn(ssn);
      employees.add(newemployee);
      
  }


  private static void viewEmployee() {
    System.out.println("------------------------------------");
    System.out.println("                                    ");
    System.out.println("View Employee(s) by the following options: ");
    System.out.println("1. View by Full Name");//view employee by name
    System.out.println("2. View by Job Title");//view employee by job title
    System.out.println("3. view Employee(s) by Employee Type");//view employee by employee type
    System.out.println("4. View Employee by SSN");//view employee by ssn  
    System.out.print("Enter your choice: ");
    int option = scanner.nextInt();
    scanner.nextLine();
    
    
    switch (option) {
      case 1:
        System.out.println("------------------------------------");
        System.out.print("Enter Employee Full Name: ");
        String fullName = scanner.nextLine();
        for (Employee employee : employees) {
          if (employee.getFullName().equals(fullName)) {
            System.out.println("------------------------------------");
            System.out.println("                                    ");
            System.out.println("---------- Employee Found ----------");//employee was found in the search
            System.out.println("Employee Details:");
            System.out.println("Full Name: " + employee.getFullName());//full name
            System.out.println("Job Title: " + employee.getJobTitle());//job title  
            System.out.println("Employee Type: " + employee.getEmployeeType());//employee type
            System.out.println("SSN: " + employee.getSsn());//ssn
            System.out.println("------------------------------------");
            System.out.println("Hours per week: "+ employee.getHoursWorkedPerWeek());
            System.out.println("------------------------------------");
            if (employee.getEmployeeType().equals("Salaried| Full-time")){
              employee.setAnnualSalary(45 * employee.getHourlyWage() * 52);//set annual to 45 hours times hourly wage times 52 weeks
            }
            else if (employee.getEmployeeType().equals("Salaried| Part-time")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage() *52);//set annual to hours worked per week times hourly wage times 52 weeks
            }
            else if (employee.getEmployeeType().equals("Hourly| Contractor")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage());//this is week by week pay but still use annual variable. hours per week times hourly wage
            }
            System.out.println("Annual Salary: " + employee.getAnnualSalary());
            break;
          }
        }
        break;
      case 2:
        System.out.println("------------------------------------");
        System.out.print("Enter Job Title: ");
        String jobTitle = scanner.nextLine();
        for (Employee employee : employees){
          if (employee.getJobTitle().equals(jobTitle)) {
            //hourlyWage = 22;//setting and hourly wage
            System.out.println("------------------------------------");
            System.out.println("                                    ");
            System.out.println("---------- Employee Found ----------");// found the employee
            System.out.println("Employee Details:");
            System.out.println("Full Name: " + employee.getFullName());
            System.out.println("Job Title: " + employee.getJobTitle());
            System.out.println("Employee Type: " + employee.getEmployeeType());
            System.out.println("SSN: " + employee.getSsn());
            System.out.println("------------------------------------");
            System.out.println("Hours per week: "+ employee.getHoursWorkedPerWeek());
            System.out.println("------------------------------------");
            // depending on employee type shows the pay//
            if (employee.getEmployeeType().equals("Salaried| Full-time")){
              employee.setAnnualSalary(45 * employee.getHourlyWage()*52);
            }
            else if (employee.getEmployeeType().equals("Salaried| Part-time")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage() *52);
            }
            else if (employee.getEmployeeType().equals("Hourly| Contractor")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage());
            }
            System.out.println("Annual Salary: " + employee.getAnnualSalary());
            break;
          }
        }
        break;
      case 3:
        System.out.println("------------------------------------");
        System.out.println("Enter Employee(s) Job Type: ");
        System.out.println("1. Salaried| Full-time");
        System.out.println("2. Salaried| Part-time");
        System.out.println("3. Hourly| Contractor");
        int chooseEmployeeType = scanner.nextInt();
        scanner.nextLine();
        
        switch(chooseEmployeeType){
          case 1:// if user chose 1 and full time this runs//
            for (Employee employee : employees){
              if (chooseEmployeeType == 1 && employee.getEmployeeType().equals("Salaried| Full-time")) {
                //hourlyWage = 22;
                employee.setAnnualSalary(45 * employee.getHourlyWage());
                System.out.println("------------------------------------");
                System.out.println("                                    ");
                System.out.println("---------- Employee Found ----------");
                System.out.println("Employee Details:");
                System.out.println("Full Name: " + employee.getFullName());
                System.out.println("Job Title: " + employee.getJobTitle());
                System.out.println("Employee Type: " + employee.getEmployeeType());
                System.out.println("SSN: " + employee.getSsn());
                System.out.println("------------------------------------");
                System.out.println("Hours per week: "+employee.getHoursWorkedPerWeek());
                System.out.println("------------------------------------");
                System.out.println("Annual Salary: "+ employee.getAnnualSalary());
              }
            }
            case 2:// if user chose 2 which is part time this runs
              for (Employee employee : employees){
                if (chooseEmployeeType == 2 && employee.getEmployeeType().equals("Salaried| Part-time")) {
                  employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage() * 52);
                  System.out.println("------------------------------------");
                  System.out.println("                                    ");
                  System.out.println("---------- Employee Found ----------");
                  System.out.println("Employee Details:");
                  System.out.println("Full Name: " + employee.getFullName());
                  System.out.println("Job Title: " + employee.getJobTitle());
                  System.out.println("Employee Type: " + employee.getEmployeeType());
                  System.out.println("SSN: " + employee.getSsn());
                  System.out.println("------------------------------------");
                  System.out.println("Hours per week: "+ employee.getHoursWorkedPerWeek());
                  System.out.println("------------------------------------");
                  System.out.println("Annual Salary: $" + employee.getAnnualSalary());
                } 
            }
            case 3:
            for (Employee employee : employees){
              if (chooseEmployeeType == 3 && employee.getEmployeeType().equals("Hourly| Contractor")) {
                //int hourlyWage = 22;
                employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage());
                System.out.println("------------------------------------");
                System.out.println("                                    ");
                System.out.println("---------- Employee Found ----------");
                System.out.println("Employee Details:");
                System.out.println("Full Name: " + employee.getFullName());
                System.out.println("Job Title: " + employee.getJobTitle());
                System.out.println("Employee Type: " + employee.getEmployeeType());
                System.out.println("SSN: " + employee.getSsn());
                System.out.println("------------------------------------");
                System.out.println("Hours per week: "+ employee.getHoursWorkedPerWeek());
                System.out.println("Hourly wage: $" + employee.getHourlyWage());
                System.out.println("------------------------------------");
                System.out.println("Salary for the week: $" + employee.getAnnualSalary());
            
              }
            }
            break;
      case 4:
        System.out.println("------------------------------------");
        System.out.print("Enter SSN: ");
        String ssn = scanner.nextLine();
        for (Employee employee : employees) {
          if (employee.getSsn().equals(ssn)) {
            System.out.println("------------------------------------");
            System.out.println("                                    ");
            System.out.println("---------- Employee Found ----------");
            System.out.println("Employee Details:");
            System.out.println("Full Name: " + employee.getFullName());
            System.out.println("Job Title: " + employee.getJobTitle());
            System.out.println("Employee Type: " + employee.getEmployeeType());
            System.out.println("SSN: " + employee.getSsn());
            System.out.println("------------------------------------");
            System.out.println("Hours per week: "+employee.getHoursWorkedPerWeek());
            System.out.println("------------------------------------");
            // depending on employee type shows the pay//
            if (employee.getEmployeeType().equals("Salaried| Full-time")){
              employee.setAnnualSalary(45 * employee.getHourlyWage()*52);
            }
            else if (employee.getEmployeeType().equals("Salaried| Part-time")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage() *52);
            }
            else if (employee.getEmployeeType().equals("Hourly| Contractor")){
              employee.setAnnualSalary(employee.getHoursWorkedPerWeek() * employee.getHourlyWage());
            }
            System.out.println("Annual Salary: " + employee.getAnnualSalary());
            break;
          }
        }
        break;
      default:
            System.out.println("Invalid option. Please try again.");
    }
  }
  }

  private static void deleteEmployee() {
    System.out.println("------------------------------------");
    System.out.println("                                    ");
    System.out.println("Delete Employee by the following options: ");
    System.out.println("1. View by Full Name");
    System.out.println("2. View Employee by SSN");
    System.out.print("Enter your choice: ");
    int option = scanner.nextInt();
    scanner.nextLine();
    
    switch (option) {
      case 1:
        System.out.println("------------------------------------");
        System.out.print("Enter Employee Full Name: ");
        String fullName = scanner.nextLine();
        for (Employee employee : employees) {
          if (employee.getFullName().equals(fullName)) {
            System.out.println("------------------------------------");
            System.out.println("                                    ");
            System.out.println("---------- Employee Found ----------");
            System.out.println("Employee Details:");
            System.out.println("Full Name: " + employee.getFullName());
            System.out.println("Job Title: " + employee.getJobTitle());
            System.out.println("Employee Type: " + employee.getEmployeeType());
            System.out.println("SSN: " + employee.getSsn());
            System.out.println("------------------------------------");
            System.out.println("Hours per week: "+employee.getHoursWorkedPerWeek());
            System.out.println("------------------------------------");
            System.out.println("------------------------------------");
            System.out.println("                                    ");
            System.out.println("Are you sure you want to delete this employee?");
            System.out.print("(y/n): ");
            String answer = scanner.nextLine();
            if (answer.equals("y")){
              employees.remove(employee);
              System.out.println("--------- Employee Deleted -----------");//employee gone//
              break;
            }
            else //if user input 'n' go back to menu
              break;
          }
        }
    }

  }
  }


